@model IEnumerable<MvcMusicStore.Models.Genre>

@{
    ViewBag.Title = "Store";
}

<h3>Browse Genres</h3>
<p>Select from @Model.Count() genres:</p>

<ul>
    @foreach (var genre in Model)
    {
        //1 Using Razor Simple dynamic links
        @*<li><a href="/Store/Browse?genre=@genre.Name">@genre.Name</a></li>*@

        //2 Using html.ActionLink() HTML Helpers (recommended way)
        <li>@Html.ActionLink(genre.Name, "Browse", new { genre = genre.Name })</li>
    }
</ul>
