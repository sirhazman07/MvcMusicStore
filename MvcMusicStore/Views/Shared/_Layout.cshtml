<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
        <div id="header">
            <h1>ASP.NET MVC MUSIC STORE</h1>
            <ul id="navlist">
                @*ADD NAV ICONS*@
                <li class="first "><a href="/" id="current"><img src="~/Content/glyphicons_free/glyphicons/png/glyphicons-21-home.png"/> Home</a></li>
                <li><a href="/Store/"><img src="~/Content/glyphicons_free/glyphicons/png/glyphicons-453-shop.png" /> Store</a></li>
                <li> @{Html.RenderAction("CartSummary", "ShoppingCart");} </li>
                <li><a href="/StoreManager/"><img src="~/Content/glyphicons_free/glyphicons/png/glyphicons-281-settings.png" /> Admin</a></li>
            </ul>
        </div>
        
    @*Render our Genre Side Menu List Partial View*@
        @{Html.RenderAction("GenreMenu", "Store"); }

        <div id="main">
            @RenderBody()
        </div>
        
        @*Changed from <footer> tag for css class*@
        <div id="footer">
            <p>&copy; @DateTime.Now.Year - Built using ASP.NET</p>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
